                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtMobileThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEmailThor"
                android:layout_toRightOf="@id/imgThor"
                android:paddingTop="10dp"
                android:text="+91 9811257555"
                android:textSize="18sp"
                android:textStyle="normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBlackPanther"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@drawable/black_panther" />


            <TextView
                android:id="@+id/txtnamePanther"
                android:layout_width="wrap_content"
