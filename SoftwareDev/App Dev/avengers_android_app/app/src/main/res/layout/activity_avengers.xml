                android:paddingTop="10dp"
                android:text="+91 8384078155"
                android:textSize="18sp"
                android:textStyle="normal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgWidow"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@drawable/black_widow" />


            <TextView
                android:id="@+id/txtnameWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/imgWidow"
                android:paddingTop="20dp"
                android:text="Natasha Romanoff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmailWidow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtnameWidow"
                android:layout_toRightOf="@id/imgWidow"
                android:paddingTop="15dp"
                android:text="widow@gmail.com"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtMobileWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEmailWidow"
                android:layout_toRightOf="@id/imgWidow"
                android:paddingTop="10dp"
                android:text="+91 8384008155"
                android:textSize="18sp"
                android:textStyle="normal" />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOG OUT"
            android:id="@+id/btnLogOut"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:textColor="#ffffff"/>


    </LinearLayout>
</ScrollView>